.menu {
  /* border: 3px solid aquamarine; */
  display: flex;
  font-family: "shantell sans", cursive;

  font-size-adjust: 0.7;
  font-weight: 700;
  font-style: normal;
  font-variation-settings: "BNCE" 0, "INFM" 56, "SPAC" 13.2;

  justify-content: center;

  gap: 10%;
}

nav {
  border: 3px solid #2b3618;
  grid-area: content;
  padding: 20px;
  color: #1f271b;
}

.cards {
  /* font-weight: bold; */
  border: 3px solid purple;
  padding: 20px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: auto;
  justify-content: center;
}

article {
  /* refresher: https://css-tricks.com/snippets/css/a-guide-to-flexbox/
  will likely need to import differnt flex style for vertical alignment for
  smaller screens. place up high for priority*/

  border: 3px dotted blue;
  max-width: 32%;
  display: flex;
  min-width: 300px;
}

.articlePad {
  background-color: #2b3618;
  margin: 10px;
  align-items: center;
  border: 3px solid grey;
}

.articleText {
  color: white;
  padding: 20px;
  align-items: center;
  border: 3px solid green;
}
