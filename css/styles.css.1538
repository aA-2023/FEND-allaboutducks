/* imports fancy google font and larger screen CSS layout*/
@import url("https://fonts.googleapis.com/css2?family=Shantell+Sans:ital,wght,INFM,SPAC@0,700,56,13.2;1,700,56,13.2&display=swap");

@import url("bigscreen.css");




.it {
  font-style: italic;

}
/* small screen layout. columns */
@media only screen and (max-width: 700px) {
  .container {
    margin: auto;

    gap: 10px;
    height: 90%;
  }
  h3 {
    font-size: 0.7em;
  }

  background-color: #fbfff4;
  /*  color: white; */
  font-family: sans-serif;
}

.container {
  padding: 20px;
  border: 3px solid blue;
  grid-area: head;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

search {
  float: right;
}

main {
  border: 3px dotted black;
  padding-right: 20px;
  padding-left: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.quack {
  display: block;
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}

